div.vote-rating
  p Rating: #{votable.rating}
.vote-links
  = link_to 'up', polymorphic_path([:vote, votable], vote: :up),
          method: :patch, remote: true, data: {type: :json},
          class: "vote-up-#{votable.class.name.downcase}-#{votable.id}" unless votable.vote_of(current_user) == :up_vote
  = link_to 'down', polymorphic_path([:vote, votable], vote: :down),
          method: :patch, remote: true, data: {type: :json},
          class: "vote-down-#{votable.class.name.downcase}-#{votable.id}" unless votable.vote_of(current_user) == :down_vote